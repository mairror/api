# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[settings]
known_third_party = boto3,bson,config,database,docs,fastapi,httpx,main,middleware,models,motor,pydantic,pytest,routers,ruamel,sentry_sdk,utils,uvicorn
